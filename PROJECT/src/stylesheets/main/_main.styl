$full-width = ''
$padding = ''

if $style-grid == fluid
	$full-width = 100%
else
	$full-width = 960px


if $fixed-gutter == true
	$padding = ($gutter/2px)
	$gutter = $gutter + 0px
else
	$padding = ($gutter/2%)
	$gutter = $gutter + 0%

/* Reset */
body
	margin: 0
	padding: 0

*,
*:before,
*:after
	box-sizing border-box

// Placeholder
$clear-box
	display: inline
	float: left
	overflow: hidden
	padding: 0 $padding


/* Main Box */

.container
	width: $full-width
	margin: auto

/* Colummns */

if $fixed-gutter == true
	for num in (1..$grid-columns)
		.column-{num}
			width: (($full-width/$grid-columns) * num)
			@extend $clear-box

else
	for num in (1..$grid-columns)
		.column-{num}
			width: (($full-width/$grid-columns) * num) - $gutter
			@extend $clear-box

.initial
	margin-left: -($padding)

.final
	margin-right: -($padding)

/* Space Before */
for num in (1..$grid-columns)
	.before-span-{num}
		margin-left: (($full-width/$grid-columns)* num)

/* Space After */
for num in (1..$grid-columns)
	.after-span-{num}
		margin-right: (($full-width/$grid-columns)* num)


